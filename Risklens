<script>

function generate(){

let score = Math.floor(Math.random()*100);

let scoreElement = document.getElementById("score");
let decisionElement = document.getElementById("decision");

scoreElement.innerText = score;

if(score < 40){
scoreElement.className = "score low";
decisionElement.innerText = "Approved";
}

else if(score < 70){
scoreElement.className = "score medium";
decisionElement.innerText = "Manual Review Required";
}

else{
scoreElement.className = "score high";
decisionElement.innerText = "Blocked â€” High Risk";
}

}

</script>

